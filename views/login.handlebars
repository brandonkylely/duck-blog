<div class="text-center">

<h2 class="font-2xl">login</h2>

<form id="login-form" class="mx-auto border-solid border-2 rounded-md border-slate-200 w-1/3">
  <div class="py-2">
    <label for="username-input-login">Username</label>
    <input type="text" id="username-input-login" class="text-slate-800"/>
  </div>
  <div class="py-2">
    <label for="password-input-login" class="form-label">Password</label>
    <input type="password" id="password-input-login" class="text-slate-800"/>
  </div>

  <button type="submit" class="py-2 border-solid border-2 rounded-md border-slate-200 hover:border-t-4 hover:font-bold">Login!</button>

  <a type="button" href="/signup" class="py-2 border-solid border-2 rounded-md border-slate-200 hover:border-t-4 hover:font-bold">Sign up instead</a>
</form>

</div>
<script src="/js/login.js"></script>
