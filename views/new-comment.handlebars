{{!-- {{#if singlePost}} --}}
<div class="my-20">
  {{> single-post}}
</div>
{{!-- {{/if}} --}}
<div class=" mx-auto w-2/3 text-navy px-4  border border-navy rounded-xl my-3 bg-white-yellower">
  <form class="form new-comment-form text-center" data-postId="{{singlePost.id}}">
    <div class="form-group text-center">
      <label class="text-2xl font-bold py-3" for="new-comment-body">new <i class="fa-solid fa-comment-dots"></i></label>
      <br>
      <textarea class="form-input h-32 w-11/12 border-2 border-navy rounded-lg" id="new-comment-body" name="new-comment-body"></textarea>
    </div>
    <div class="form-group">
      <button type="submit" class="border-2 rounded-lg hover:bg-gray-100 p-1 mt-2 font-semibold hover:border-black" data-postId="{{singlePost.id}}">submit <i class="fa-solid fa-question"></i></button>
    </div>
  </form>
</div>

<script src="/js/createComment.js"></script>