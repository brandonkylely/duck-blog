      <header class="w-48 mx-auto text-3xl font-bold text-center">
          <h1 class="">duck blog</h1>
      </header>
      <div class="w-48 px-auto text-2xl py-10">
        <div class="my-2 hover:bg-gray-600 border-0 rounded-lg hover:bg-opacity-5 border-orange-sorbet"><i class="fa-solid fa-house w-8 "></i> <a href="/" class="">home</a></div> 
        <div class="my-2 hover:bg-gray-600 border-0 rounded-lg hover:bg-opacity-5 border-orange-sorbet"><i class="fa-solid fa-square-poll-horizontal w-8"></i><a href="/dashboard" class="">dashboard</a></div>
