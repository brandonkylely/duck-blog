        <div class="my-2 hover:bg-gray-600 border-0 rounded-lg hover:bg-opacity-5 border-orange-sorbet"><i class="fa-solid fa-right-from-bracket w-8"></i><a href="#" id="logout-link" class="">logout</a></div>
        {{/if}}
      </div>
