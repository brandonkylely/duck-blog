{{> single-post}}

<form class="form edit-post-form" data-postId="{{singlePost.id}}">
  <div class="form-group">
    <label for="edit-post-body">title</label>
    <input class="form-input text-slate-800" type="text" id="edit-post-title" name="edit-post-title"/>
  </div>
  <div class="form-group">
    <label for="edit-post-body">body</label>
    <textarea class="form-input text-slate-800" id="edit-post-body" name="edit-post-body"></textarea>
  </div>
  <div class="form-group">
    <button type="submit" class="hover:font-bold">submit edited post</button>
  </div>
</form>

<script src="/js/editPost.js"></script>